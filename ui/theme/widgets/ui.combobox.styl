.ui-combobox .ui-combobox-input {
    border-radius:$themeBorderRadius 0 0 $themeBorderRadius;
    line-height: $brickHeight;
    height: $brickHeight;
}

.ui-combobox .ui-combobox-input-frame {
	margin-right: -30px;
	margin-left: 0px;
	width: 100%;
	display: inline;
	float: left;
}

.ui-combobox .ui-combobox-dropdownbutton .ui-button{
    border-radius: 0 $themeBorderRadius $themeBorderRadius 0;
}

.ui-combobox-input.ui-autocomplete-input {
    border-bottom-right-radius: 4px;
    border-top-right-radius: 4px;
}

.ui-combobox-dropdownbutton-frame {
    overflow:visible;
	margin-right: -27px;
	margin-left: 0px;
    position: relative;
    height: 36px;
    width: 30px;
    top: 4px;
	float: left;
	display: inline;
	left: 1px;
}

.ui-combobox .ui-combobox-label {
    font-weight: normal;
}

